<div 
    id="sectionNav"
    class="w-full px-0 sb-section-navigation md:mt-0 lg:px-10 lg:container " 
    x-effect="$el.setAttribute('aria-expanded',  $store.burgeropen || $screen('lg')); $el.setAttribute('aria-hidden', ! ($store.burgeropen || $screen('lg')))"
>
{{#> components/horizontal_scroll_container/horizontal_scroll_container _container="scrollContainerSectionNav"}}

        <div x-ref="{{_divname}}" @scroll="updateIndex($event.target)" class="w-full overflow-hidden overflow-x-scroll leading-10 transition-all duration-300 ease-in-out cursor-default hide-scroll-bar lg:max-h-10 align-center">
            <div class="flex w-full">
                <span id="sectionNavHeadline" class="hidden">Bereichsnavigation</span>

                {{#with this.sectionNavigationSSILinks}}
                    <ul class="flex flex-col items-center w-full text-left text-white list-none lg:flex-row lg:h-auto">
                        {{#each this}}   
                            {{#if (isStorybook)}}  
                                {{> components/site_header/section_navigation/section_navigation_item }}   
                            {{else}}
                                {{{this}}}
                            {{/if}}
                            {{#if @first}}
                                {{#with ../../this.topTopicsNavigationSSILinks }}                               
                                    {{> components/site_header/section_navigation/section_navigation_top_topics }}                             
                                {{/with}}
                            {{/if}}
                        {{/each}} 
                    </ul>
                {{/with}}

            </div>
        </div>
{{/components/horizontal_scroll_container/horizontal_scroll_container}}

</div> 