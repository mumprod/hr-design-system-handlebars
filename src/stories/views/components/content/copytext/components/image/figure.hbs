<figure {{~#if _cssClass}} class="{{_cssClass}}"{{/if}}>
    {{#if _noAr }}
        {{> components/base/image/responsive_image this.Image  _type=_type _variant=_variant _addClass=_pictureAddClass _isWebview=_isWebview _noDelay=_noDelay}}
    {{else}}
        {{> components/base/image/responsive_image this.Image _type=_type _variant=_variant _addClass=_pictureAddClass _addClassImg="ar__content" _isWebview=_isWebview _noDelay=_noDelay}}
    {{/if}}
    {{#unless _voting-option}}
        {{~> components/content/copytext/components/image/figcaption~}}
    {{/unless}}
</figure>