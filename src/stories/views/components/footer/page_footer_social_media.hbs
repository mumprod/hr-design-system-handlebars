<nav class="flex justify-center pb-0 md:block " aria-labelledby="c-footer_social_media_title" >
    <span id="c-footer_social_media_title" class="hidden">{{_title}}</span>
    {{#each _columns}}
        <ul class="flex flex-row justify-end pb-2 pr-2 md:pr-0 md:last:pb-4">
            {{#each this.links}}
                {{#if this.link.extern}}
                    <li class="pr-2 last:pr-0">
                        {{#> components/base/link _link=this.link _css="text-white" _isTargetBlank=this.isTargetBlank}}
                            {{> components/base/image/icon _icon=this.link.text _iconmap="icons" _addClass="w-8 h-8 fill-current"}}
                        {{/components/base/link}}
                        {{#*inline "htmlProperties"}}
                            title="{{this.title}}"
                        {{/inline}}
            
                    </li>
                {{else}}
                    <li class="pr-2 last:pr-0">
                        {{#> components/base/link _link=this.link _css="text-white" _isTargetBlank=this.isTargetBlank}}
                            {{> components/base/image/icon _icon=this.link.text _iconmap="icons" _addClass="w-8 h-8 fill-current"}}
                        {{/components/base/link}}
                        {{#*inline "htmlProperties"}}
                            title="{{this.title}}"
                        {{/inline}}
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    {{/each}}
</nav>