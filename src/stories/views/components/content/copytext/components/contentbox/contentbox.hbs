{{#>components/content/copytext/components/common/paragraphbox_wrapper _showFullsize=this.showFullSize.isTrue _cssClass="copytext__box"}}

    {{~> components/base/a11y/hiddenText _locaTag="story_infobox_intro_sr" ~}}

    {{~#if this.title}}
        <h3 class="text-lg sm480:text-2xl font-headingSerif dark:text-text-dark">{{this.title}}</h3>
    {{/if}}

    {{~#with this.copytextParagraph.[0].paragraphBoxItem }}
        {{~#if this.isImage}}
            {{#if ../this.showFullSize.isTrue }}
                {{#unless this.showFullSize.isTrue }}
                    <div class="w-full mr-0 sm:mr-5 sm:w-1/2 sm:float-left">
                {{/unless}}
            {{/if}}
            {{> components/content/copytext/components/image/figure
                    _cssClass=(if ../this.title "mt-5 mb-0" "my-0" )
                    _type="story"
                    _variant=(if this.showPortrait.isTrue "copytext-portrait" "100-copytext")
                    _noAr=(if this.showPortrait.isTrue true false)
                    _pictureAddClass=(if this.showPortrait.isTrue "" "ar-16-9")
                    _cssClassCaption="mb-3"
                    _isWebview=../_isWebview-adjust_context}}
            {{#if ../this.showFullSize.isTrue }}
                {{#unless this.showFullSize.isTrue }}
                    </div>
                {{/unless}}
            {{/if}}
        {{/if~}}
    {{/with}}

    {{#with this.copytext}}
        {{#each this.paragraph}}
            {{#each this.text.split}}
                {{#if this.isText}}
                    <p class="{{#if ../../../this.title}} mt-4{{else}}{{#if ../../../this.copytextParagraph.[0].paragraphBoxItem}} mt-4{{else}}{{#if @../first}}{{#if @first}} -mt-0.5{{else}} mt-4{{/if}}{{else}} mt-4{{/if}}{{/if}}{{/if}} text-base sm480:text-lg sm480:leading-normal dark:text-text-dark">{{{this.text}}}</p>
                {{/if}}
                {{#if this.isUl}}
                    <ul class="{{#if ../../../this.title}} mt-4{{else}}{{#if ../../../this.copytextParagraph.[0].paragraphBoxItem}} mt-4{{else}}{{#if @../first}}{{#if @first}} -mt-0.5{{else}} mt-4{{/if}}{{else}} mt-4{{/if}}{{/if}}{{/if}}  overflow-hidden pl-5 text-base list-disc sm480:text-lg sm480:leading-normal dark:text-text-dark">{{{this.text}}}</ul>
                {{/if}}
                {{#if this.isOl}}
                    <ol class="{{#if ../../../this.title}} mt-4{{else}}{{#if ../../../this.copytextParagraph.[0].paragraphBoxItem}} mt-4{{else}}{{#if @../first}}{{#if @first}} -mt-0.5{{else}} mt-4{{/if}}{{else}} mt-4{{/if}}{{/if}}{{/if}}  overflow-hidden pl-5 text-base list-decimal sm480:text-lg sm480:leading-normal dark:text-text-dark">{{{this.text}}}</ol>
                {{/if}}
            {{/each}}
        {{/each}}
    {{/with}}

    {{~#block "subParagraphs"}}{{/block~}}

    {{~> components/base/a11y/hiddenText _locaTag="story_infobox_outro_sr" ~}}

{{/components/content/copytext/components/common/paragraphbox_wrapper}}