{{#>components/page/base/page_wrapper _isArticle=true}}
    {{> components/page/base/page_header}}

    {{> components/page/components/shorttext _text=this.shorttext }}

    {{> components/page/components/metadatabox _showDate=this.hasDwellTime _webview=_webview-adjust_context}}
    
    
    {{#unless this.displayPageLead.isFalse}}
        {{#with this.teaseritemDS }}
            {{#if this.isImage}}
                {{> components/content/copytext/components/image/figure
                    _cssClass="article-full-width md:article-breakout mt-5 sm:mt-7 "
                    _cssClassCaption="mx-5 md:mx-0"
                    _type="story"
                    _variant=(if this.showSquareImage.isTrue "100-top-sb-1x1" "100-top-sb")
                    _pictureAddClass=(if this.showSquareImage.isTrue "grid ar-1-1 md:ar-16-9" "ar-16-9")
                    _isWebview=../_webview-adjust_context
                    _noDelay=true}}
            {{/if}}
            {{#if this.isVideoOnDemand}}
               {{> components/content/copytext/components/media/media_figure _isLead=true _fullSize=true _addClass="print:hidden article-full-width md:article-breakout mt-12 mb-6 sm:mt-14 sm:mb-8" _cssClassCaption="mx-5 md:mx-0" _a11yIntro-loca="story_video_intro_sr" _a11yOutro-loca="story_video_outro_sr" }}
            {{/if}}
            {{#if this.isLivestream}}
               {{> components/content/copytext/components/media/media_figure _isLead=true _fullSize=true _addClass="print:hidden article-full-width md:article-breakout mt-12 mb-6 sm:mt-14 sm:mb-8" _cssClassCaption="mx-5 md:mx-0" _a11yIntro-loca="story_video_livestream_intro_sr" _a11yOutro-loca="story_video_livestream_outro_sr" }}
            {{/if}}
        {{/with}}
    {{/unless}}

    {{#unless _webview-adjust_context}}        
        {{> components/social_sharing/social_sharing_copytext _useSticky=(configProperty "templates.useStickyNav")}}
    {{/unless}}
    {{~> components/content/copytext/copytext _isWebview=_webview-adjust_context ~}}

     {{~> components/content/content_footer/content_footer 
        _showDate=this.hasDwellTime
        _date=this.documentPublicationDate
        _source=this.source
        _isArchiveContent=this.isArchiveContent ~}}

    {{> components/page/components/appendix _isArticle=true _webview=_webview-adjust_context}}
    
    {{> components/page/components/comments }}

{{/components/page/base/page_wrapper}}

{{> components/base/loadSSI this.relatedContentSsi _templatePath="components/page/story/components/related-content.ssi"}}