<div class="border-none h-full">
<div class="relative flex content-start flex-wrap">
<div class="flex grow-0 shrink basis-full order-none px-0.5 py-0.5 align-top box-border">
<div class="w-full h-full flex flex-wrap">
<div class="flex flex-col grow-0 shrink basis-1/12 align-top items-center justify-center p-4 border-dashed border-r border-black">
    {{#with this.startDate}}
        <span class='text-sm font-headingSerif'>{{this.weekdayNameShort}}</span>
        <span class='text-2xl font-headingSerif font-bold'>{{this.day}}</span>
        <span class='text-sm font-headingSerif'>{{this.monthNameShort}}</span>
    {{/with}}
</div>
<div class="flex grow-0 shrink basis-10/12 -pt-4 px-2.5 box-border inline-block align-top ">
    <div class="static w-full">
        <div class="px-4 mt-4">
        {{> components/teaser/components/teaser_heading 
            _fontVariant=this.headingFontVariant
            _headlineTag="h3"
            _label=this.label 
            _title=this.title 
            _topline=this.topline 
            _teaserType="calendar"
            _toplineCss="mt-4"}}            
            {{> components/event/event_details this}}
        </div>
    </div>
    </div> 
    </div>
    <figure class="relative ar-16-9">
    {{> components/base/image/responsive_image this.image _type="event-teaser" _variant="100" _addClass="w-full"}}
</figure>
</div>
</div>
{{#with this.concertInfo}}
    {{#unless this.isEmpty}}
    <div class="flex flex-col grow-0 shrink basis-full py-7 w-full border-t border-dotted">
        {{> components/event/concert_info}}
    </div>
    {{/unless}}
{{/with}}