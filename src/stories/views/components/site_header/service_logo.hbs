<a class="relative flex items-center text-white fill-current sb-service-logo lg:items-end link-focus-white print:hidden" 
    href={{resourceUrl "index.html"}} 
    title="{{loca "header_homepage_link_title"}}">
    <span x-cloak class="absolute transition-opacity duration-500 ease-in-out {{#unless _useSticky}}flex lg:hidden{{/unless}}" {{#if _useSticky}} :class="`${percent}` < 50 ? 'opacity-0' : 'delay-200 opacity-100'" {{/if}} >
        {{> components/base/image/icon _icon="brandlogo--mobile" _iconmap="logo" _addClass="logo-compact h-10 w-10 "}}
    </span>
    <span class="transition-opacity duration-500 ease-in-out {{#unless _useSticky}}hidden lg:flex{{/unless}}" {{#if _useSticky}} :class="`${percent}` < 50 ? 'opacity-100' : 'opacity-0'" {{/if}}>
        {{> components/base/image/icon _icon="brandlogo--desk" _iconmap="logo" _addClass="logo-desk flex items-center fill-white h-5 md:h-7 lg:h-8 "}}
    </span> 
</a>
