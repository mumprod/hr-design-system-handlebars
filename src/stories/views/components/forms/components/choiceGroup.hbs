<fieldset
    {{#if _required}}
        ax-load
        x-data="inputHandler('input{{nextRandom}}','{{_formId}}','{{_errorMandatory}}','choice-group','', '', '{{_name}}')"
        x-ignore
    {{/if}}
>
<div class="relative flex flex-col w-full mb-5 md:mb-7 gap-y-1 md:gap-y-2">
    <legend class="mb-1 text-lg font-bold text-text dark:text-text-dark md:text-xl font-heading md:mb-2">
        {{#if _hasBody}}
            {{decorator_body}}{{#if _required}}*{{/if}}
        {{else}}
            {{#if _locaKey}}
                {{loca _locaKey}}{{#if _required}}*{{/if}}
            {{else}}
                {{#if _label}}
                    {{{_label}}}{{#if _required}}*{{/if}}
                {{/if}}
            {{/if}}
        {{/if}}
    </legend>
    <div class="flex flex-row gap-x-6 gap-y-5 {{#if _isHorizontalLayout}} flex-wrap sm:flex-nowrap flex-col sm:flex-row{{else}} flex-wrap {{#unless _isMultimediaVoting}}{{_addClassGroup}}{{/unless}}{{/if}}">
        {{#each _items}}
                {{> components/forms/components/choice
                        _type=../_type
                        _name=../_name
                        _required=../_required
                        _value=this.value
                        _inGroup=true
                        _label=this.label
                        _selected=this.selected
                        _title=this.title
                        _multipleChoice=../_multipleChoice
                        _formId=../_formId 
                        _addClass=../_addClassChoice
                        _addClassLabel=../_addClassLabel
                        _addClassInput=../_addClassInput
                        _isHorizontalLayout=../_isHorizontalLayout
                }}
        {{/each}}
    </div>
    <div class="flex items-end justify-between min-h-5 font-heading">     
      {{#if _description}}  
         <div class="text-xs text-gray-scorpion dark:text-text-dark" {{#if _required}}:class="{'hidden': hideDescription()}"{{/if}}>{{_description}}</div>
      {{/if}}
      {{#if _required}}
         <div class="hidden text-xs text-error dark:text-error-dark" :class="{'hidden': hideError()}" x-text="errorMessage"></div>
      {{/if}}
   </div>
</div>
</fieldset>
