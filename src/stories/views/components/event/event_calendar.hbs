<article class="col-span-12">

    <div class="flex flex-col border-labelEventCalendarTitle border gap-x-4"> 
    <h2 class="flex border-teal-600 border font-bold py-2 gap-x-4 items-center justify-center bg-labelEventCalendarTitle"> 
        <span class="text-white text-2xl leading-6 w-full text-center
                                    ">Eventkalender</span></h2>
            <div class="relative js-load" data-hr-native-scroll='{"isTeaser":"true"}' data-hr-filterer="{}">
                {{> components/event/event_calender_nav this.months}}
                    </div>
            </div>
    {{#each this.months}}
        {{#each this.days}}
            {{#each this.instants}}
                {{#unless this.isDateInstant}}
                <section id="{{this.startDate.htmlDate}}"class="flex col-span-12 border-bottom-8 border-labelEventCalendarTitle border md:flex-row gap-y-3 gap-x-4 md:px-0"
                    x-data="{ avStart: false }"
                    {{#if this.isMobile1to1}}
                        :class="avStart ? 'flex-col' : 'flex-row'"
                    {{/if}} 
                >
                <div class="flex flex-col items-center justify-center p-4 border-dashed border-r border-labelEventCalendarTitle">
                            {{> components/event/instant_dates}}
                        </div>
                <div class="pt-4 md:px-0{{#unless this.isMobile1to1}} px-5{{/unless}}">
                    {{#decorator 'components/base/link' _css="hover:text-toplineColor"}} 
                        {{> components/teaser/components/teaser_heading 
                        _fontVariant=this.headingFontVariant
                        _headlineTag=this.headlineTag 
                        _label=this.label 
                        _readMore=this.link.readMoreText.readMoreScreenreader 
                        _size=this.teaserSize 
                        _title=this.title 
                        _topline=this.topline 
                        _teaserType=this.teaserType
                        _isMobile1to1=this.isMobile1to1}}            
                    {{/decorator}}   
                    <div>{{> components/event/concert_info}}</div>
                </div>
                <figure class="relative ar-16-9">
                {{> components/base/image/responsive_image this.teaserImage _type="calendar" _variant="wide" _addClass="w-full"}}
                </figure>
            </section>
                {{/unless}}
            {{/each}}
        {{/each}}
    {{/each}}
</div>
</article>