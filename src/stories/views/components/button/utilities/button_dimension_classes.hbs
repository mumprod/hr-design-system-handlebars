{{~#switch _shape~}}
    {{~#case 'rectangular'~}}
        {{~inline-switch _size '["sm","md","lg"]' '[" px-2 py-0.5"," p-2"," px-4 py-2.5",""]'~}}
    {{~/case~}}
    {{~#case 'circle'~}}
        rounded-full{{~inline-switch _size '["sm","md","lg"]' '[" p-2","p-2","p-4",""]'~}}
    {{~/case~}}
    {{~#default 'default'~}}
        {{~inline-switch _size '["sm","md","lg"]' '[" px-2 py-0.5"," p-2"," px-4 py-2.5",""]'~}}
    {{~/default~}}
{{~/switch~}}