{{#if this.link.extern}}
    <li class="flex items-center w-full h-8 pl-4 bg-white border-b whitespace-nowrap lg:pl-0 md:bg-transparent border-b-secondary md:border-0 text-primary md:text-white md:h-6">
        {{> components/footer/page_footer_nav_link  _css="hover:underline" _link=this.link _iconName="extern" }}
    </li>
{{else}}
    {{#if this.link.paragraphed}}
        <li class="flex items-center w-full h-8 pl-4 bg-white border-b whitespace-nowrap md:bg-transparent lg:pl-0 border-b-secondary md:mt-6 md:border-0 text-primary md:text-white md:h-6">
            {{> components/footer/page_footer_nav_link _site=this.site _css="hover:underline" _link=this.link}}
        </li>
    {{else}}
        <li class="flex items-center w-full h-8 pl-4 bg-white border-b whitespace-nowrap lg:pl-0 md:bg-transparent border-b-secondary md:border-0 text-primary md:text-white md:h-6 ">
            {{> components/footer/page_footer_nav_link _link=this.link _site=this.site _css="hover:underline" }}
        </li>
    {{/if}}
{{/if}}