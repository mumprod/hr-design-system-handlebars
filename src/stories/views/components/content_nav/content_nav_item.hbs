<li x-init="chooseListItemStyles({{_teasersize}},{{_islist}},{{_ismixed}},{{_isdropdown}},{{_isflow}})" 
class="h-10 md:mx-0 overflow-hidden text-base font-copy list-none border-button fill-content-nav text-content-nav bg-white hover:bg-content-nav hover:fill-white hover:text-white hover:underline {{#if this.isSelected}} font-bold -current{{/if}} c-content-nav__item">
     {{#decorator 'components/base/link' 
        _doNavigationTracking="true" 
        _clickLabelType="Contentnavigation" 
        _clickLabelPrefix1=this.title 
        _css="flex items-center py-2 px-2 h-10 whitespace-nowrap overflow-hidden" 
        _isSelected=this.isSelected
        _selectedCssClass="is-selected"
    }}
        
        <span class="block text-base grow font-copy js-title truncate ... ">
            {{~this.title~}}
            {{~#if this.link.hasIcon~}}
                {{> components/base/image/icon _icon=this.link.iconName _addClass="ml-2 h-4 w-4 inline" _iconmap="icons"}}
            {{~/if~}}
        </span>
        <span>
            {{>components/base/image/icon _icon="arrow-right" _addClass="h-4 w-4 ml-2" }} 
        </span>

    {{/decorator}} 
</li>


