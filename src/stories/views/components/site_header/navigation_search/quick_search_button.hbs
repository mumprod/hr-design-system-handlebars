<div 
    x-cloak class="flex items-center h-8 sb-quick-search-button md:h-full md:border-r md:border-l border-navigation-border-color lg:border-none" 
    :class="$store.searchFieldOpen == true ? 'bg-white mt-2 rounded-t md:mt-0 md:rounded-none' : 'bg-navigation-bg'"
>
    <button  
        @click="$store.searchFieldOpen = ! $store.searchFieldOpen; dropped = false; $store.serviceNavIsOpen = false; toggleScrolling(!$store.searchFieldOpen)"
        @click.debounce.100ms="$dispatch('burger-close'); $dispatch('search-mobile-click'); $dispatch('close-servicemenu');"
        class="h-full cursor-pointer text-navigation-text md:px-4 lg:hidden"
