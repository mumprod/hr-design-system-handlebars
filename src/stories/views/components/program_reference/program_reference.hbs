<div class="programReference">
    <span class="text-sm uppercase font-headingSerif w-fit sm:w-full">{{loca "story_program_supplier"}}</span><!--
     -->
    <div class="programReference__media">
        {{#if this.link}}
            {{#decorator "base/link/link" _cssClasses="programReference__link"}}
                <img class="c-programSupplier__logo" alt="{{defaultIfEmpty _logo this.content.name
                }}" src="{{resourceUrl "assets/modules/program_reference/logos/"}}{{defaultIfEmpty _logo this.content.name}}.png">
            {{/decorator}}
        {{else}}
            <img class="c-programSupplier__logo" alt="{{defaultIfEmpty _logo this.name}}" src="{{resourceUrl "assets/modules/program_reference/logos/"}}{{defaultIfEmpty _logo this.name}}.png">
        {{/if}}
        {{#if this.date}}
            <time datetime="{{#if this.displayWithTime}}{{this.date.htmlDateTime}}{{else}}{{this.date.date}}{{/if}}"
                  class="programReference__date text__byline">
                {{#if this.displayWithTime}}
                    {{loca "date_simple_at" this.date.dateSeparatorTime}}
                {{else}}
                    {{this.date.date}}
                {{/if}}
            </time>
        {{/if}}
    </div>
</div>