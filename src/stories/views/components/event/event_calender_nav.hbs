<button class="block border-0 ml-4 absolute left-0 min-w-3 min-h-3 top-1/2 js-ns-button -left">
                    {{> components/base/image/icon _icon="arrow-left" _iconmap="icons" _addClass="w-5 h-5 fill-current" }}
                </button>
                <button class="block border-0 mr-4 absolute right-0 min-w-3 min-h-3 top-1/2 js-ns-button -right">
                    {{> components/base/image/icon _icon="arrow-right" _iconmap="icons" _addClass="w-5 h-5 fill-current" }}
                </button>
                <div class="flex relative max-w-100vw ml-14 mr-14 overflow-hidden box-border border-teal-600">
                    <div class="flex mb-0 overflow-x-auto overflow-y-hidden whitespace-nowrap js-ns-scroll -horizontal">
                {{#each eventCalendar.eventCalendarMonth.months}}
                <ul class="flex flex-col items-center justify-center border-teal-600 border-l ml-4 mr-4 js-ns-month js-fr-reload-trigger">
                    <div class="flex h-full px-2 py-2.72">
                    <span class="block font-headingSerif font-bold w-24 sticky left-0 px-2 py-3 ">{{this.monthName}} {{this.year}}</span>
                    </div>
                    <div class="flex">
                        {{#each this.days}}
                <div class="inline-block h-full group cursor-pointer js-ns-item">
                        <span class="block italic text-center group-hover:bg-black group-hover:text-white">{{this.weekDay}}</span>
                        <span class="block font-headingSerif font-bold text-labelEventCalendarTitle italic text-2xl px-3 pt-1.6 pb-0 group-hover:bg-black group-hover:text-white">{{this.day}}</span>
                </div>
                {{/each}}
                </div>
                    </ul>
                    {{/each}}
                    </div>