<article class="mx-5 md:mx-0 p-8 md:p-10 relative col-span-12 flex flex-col gap-x-4 
    {{~inline-switch this.teaserSize '["50"]' '[" md:col-span-6",""]'}}
    {{~inline-switch this.teaserType '["accented-ds","boxed-ds","highlighted-ds"]' '[" bg-blue-accented"," bg-white border border-blue-congress"," bg-orange-spicyCarrot"," bg-blue-accented"]'}} "
>
    <h3 class="text-2xl md:text-4xl font-headingSerif {{~inline-switch this.teaserType '["highlighted-ds"]' '[" text-white",""]'}}">
        {{this.title}}
    </h3>
    <p class="mt-6 text-sm md:text-base font-copy {{~inline-switch this.teaserType '["highlighted-ds"]' '[" text-white",""]'}}">
        {{this.shorttext}}
    </p>
</article>
