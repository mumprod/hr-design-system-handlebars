<div class="flex flex-wrap content-start w-full">
    {{#with this.startTime}}
    <div class="flex grow shrink-1 basis-6/12 align-top mt-4">
        <div class="min-w-3 min-h-3">
                    {{> components/base/image/icon _icon="clock" _iconmap="icons" _addClass="w-5 h-5 fill-event-calendar-secondary" }}
        </div>
        <div class='text-l pl-4 font-sans font-bold'>{{this.time}}</div>
    </div>
    {{/with}}
    {{#with this.venue}}
    <div class="flex grow flex-shrink-1 basis-6/12 align-top mt-4">
        <div class="min-w-3 min-h-3">
            {{> components/base/image/icon _icon="ortsmarke" _iconmap="icons" _addClass="w-5 h-5 fill-event-calendar-secondary" }}
        </div>
        <div class='flex flex-col text-md pl-4 font-sans font-bold w-full'>{{this.addressCity}}
            <div class="font-normal">{{this.title}}</div>
        </div>
    </div>
    {{/with}}
</div>