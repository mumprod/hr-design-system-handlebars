{{#>components/page/base/page_wrapper}}
    {{> components/page/base/page_header}}

    {{> components/page/components/shorttext _text=this.shorttext }}

    {{> components/page/components/metadatabox _showDate=this.hasDwellTime _webview=_webview-adjust_context}}
    
    
    {{#unless this.displayPageLead.isFalse}}
        {{#with this.teaseritemDS }}
            {{#if this.isImage}}
                {{> components/content/copytext/components/image/figure
                    _cssClass="article-full-width md:article-breakout mt-6 sm480:mt-7 "
                    _cssClassCaption="mx-5 md:mx-0 lg:pl-[108px] lg:pr-5"
                    _type="story"
                    _variant=(if this.showSquareImage.isTrue "100-top-sb-1x1" "100-top-sb")
                    _pictureAddClass=(if this.showSquareImage.isTrue "grid ar-1-1 md:ar-16-9" "ar-16-9")
                    _isWebview=../_webview-adjust_context
                    _noDelay=true}}
            {{/if}}
        {{/with}}
    {{/unless}}

    {{#unless _webview-adjust_context}}
        {{~#with this.socialSharing ~}}
            {{> components/social_sharing/social_sharing_copytext}}
        {{~/with~}}
    {{/unless}}
    {{~> components/content/copytext/copytext _isWebview=_webview-adjust_context ~}}

    {{> components/page/components/appendix _isArticle=true }}
    
    {{> components/page/components/comments }}

{{/components/page/base/page_wrapper}}

{{> components/base/loadSSI this.relatedContentSsi _templatePath="components/page/story/components/related-content.ssi"}}