<div class="o-layout">
    {{#each _columns}}
     <ul class="c-page-footer-nav__column -size{{{../_columnSize}}}">
        {{#each this.items}}
             {{#if this.extern}}
              <li>
                {{> components/footer/page_footer_nav_link _link=this.link _iconName="extern"}}
             </li>
             {{else}}
             {{#if this.paragraphed}}
              <li>
                {{> components/footer/page_footer_nav_link _link=this.link _site=this.site _css="--paragraphed" _iconName="extern"}}
             </li>
             {{else}}
              <li>
                {{> components/footer/page_footer_nav_link _link=this.link _site=this.site _iconName="extern"}}
             </li>
             {{/if}}
             {{/if}}
        {{/each}}
     </ul>
    {{/each}}
</div>
