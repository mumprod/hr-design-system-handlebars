{{#if this.isText}}
    <p class="copytext__paragraph mt-4 sm:mt-5 text-lg leading-normal sm480:text-xl lg:leading-7.5 dark:text-text-dark">{{{this.text}}}</p>
{{/if}}
{{#if this.isUl}}
    <ul class="copytext__paragraph pl-9 mt-4 sm:mt-5 overflow-hidden text-lg leading-normal list-disc sm480:text-xl lg:leading-7.5 dark:text-text-dark">{{{this.text}}}</ul>
{{/if}}
{{#if this.isOl}}
    <ol class="copytext__paragraph pl-9 mt-4 sm:mt-5 overflow-hidden text-lg leading-normal list-decimal sm480:text-xl lg:leading-7.5 dark:text-text-dark">{{{this.text}}}</ol>
{{/if}}