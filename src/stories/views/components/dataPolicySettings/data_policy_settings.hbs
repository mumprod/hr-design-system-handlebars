<div class="flex items-center justify-center md:justify-end js-load dataPolicySettings__buttonWrapper" data-hr-data-policy-settings-ds='{}'>
        {{#> components/button/button _size="md" _id="globalSettingsButton" _css="hover:text-secondary border-footer-text js-data-policy-settings-button" _variant="secondary" _onBackground="true" }}
            {{> components/button/components/button_icon _icon="settings" _iconmap="icons" _css="w-5 h-5"}}
            {{> components/button/components/button_label _label=(loca "cookies_setting_button_text")}}
        {{/components/button/button}}
    
        <div class="hidden fixed overflow-scroll w-full h-full top-0 left-0 right-0 bottom-0 z-300 pb-6 bg-black/[0.5] dataPolicySettings__overlay js-data-policy-settings-overlay{{#if _webview}} -webview{{/if}}">
        <div class="m-auto pt-0 max-w-[480px] bg-white dataPolicySettings__content">
            <div class="flex w-full px-6 bg-primary z-100 dataPolicySettings__header">
                <span class="flex justify-start w-full py-4 text__headline dataPolicySettings__headline">
                    <span
                        class="pr-4 -ml-2 fill-white icon dataPolicySettings__setting-icon"> {{> components/base/image/icon _icon="settings" _addClass="h-7 w-7 inline" }}</span>
                    <span class="w-full text-2xl text-white font-headingSerif dataPolicySettings__title">Einstellungen</span>
                    <button class="text-white bg-transparent fill-current button dataPolicySettings__closeButton js-data-policy-settings-close-button">
                        {{> components/base/image/icon _icon="close" _addClass="h-6 w-6 inline"}}
                    </button>
                </span>
            </div>

            <div class="bg-[#d8e9f6] p-6 dataPolicySettings__description{{#if _webview}} -webview{{/if}}">
                <span class="block text-lg text-black font-headingSerif text__headline dataPolicySettings__descriptionTitle">{{loca
                    "cookies_setting_tracking_service_description_title"}}</span>
                <p class="mt-4 text-black dataPolicySettings__descriptionText">
                    {{#with this.footerMetadata}}
                        {{#with this.dataProtectionLink}}
                            {{loca "cookies_setting_tracking_service_description_text"}}
                            <a class="block mt-2 text-link hover:underline link dataPolicySettings__description-link" target="_blank"
                               rel="noopener noreferrer" href="{{this.url}}"
                               title="Mehr Informationen zum Thema Datenschutz">Mehr Informationen zum Thema
                                Datenschutz{{#if
                                    this.targetBlank}}{{~> components/base/image/icon _icon="extern" _addClass="icon--primary icon--textRight" _iconmap="icons"~}}{{/if}}</a>
                        {{/with}}
                    {{/with}}
                </p>
            </div>

            <div class="bg-[#e3e3e3] py-2.5 px-6 dataPolicySettings__section{{#if _webview}} -webview{{/if}}">
                <span class="text-lg text-black font-headingSerif text__headline dataPolicySettings__sectionTitle">{{loca
                    "cookies_setting_tracking_service_section_title"}}</span>
            </div>

            <ul class="dataPolicySettings__providers{{#if _webview}} -webview{{/if}}">
                <li class="px-6 py-3 bg-white border-t border-[#e3e3e3] dataPolicySettings__provider tracking_1">
                    <span class="inline-block text-base text-black dataPolicySettings__providerTitle">AGF <a
                        class="mt-3 -mb-1 text-link link dataPolicySettings__tracking-link" target="_blank" rel="noopener noreferrer"
                        href="https://www.agf.de/" title="AGF">(https://www.agf.de/)</a></span>
                    {{> components/dataPolicySettings/toggle_button _provider="agf" _addClass="js-toggleSwitch-checkbox js-toggleSwitch-tracking" _isInitiallyHidden=false }}
                </li>
                <li class="px-6 py-3 bg-white border-t border-[#e3e3e3] dataPolicySettings__provider tracking_2">
                    <span class="inline-block text-base text-black dataPolicySettings__providerTitle">AT Internet <a
                        class="mt-3 -mb-1 text-link link dataPolicySettings__tracking-link" target="_blank" rel="noopener noreferrer"
                        href="https://www.atinternet.com/de/"
                        title="AT Internet">(https://www.atinternet.com/de/)</a></span>
                    {{> components/dataPolicySettings/toggle_button _provider="ati" _addClass="js-toggleSwitch-checkbox js-toggleSwitch-tracking" _isInitiallyHidden=false }}

                </li>
            </ul>

            <div class="bg-[#d8e9f6] p-6 dataPolicySettings__description">
                <span class="block text-lg text-black font-headingSerif text__headline dataPolicySettings__descriptionTitle">{{loca
                    "cookies_setting_description_title"}}</span>
                <p class="mt-4 text-base text-black dataPolicySettings__descriptionText">
                    {{#with this.footerMetadata}}
                        {{#with this.dataProtectionLink}}
                            {{loca "cookies_setting_description_text"}}
                            <a class="block mt-2 text-link hover:underline link dataPolicySettings__description-link" target="_blank"
                               rel="noopener noreferrer" href="{{this.url}}"
                               title="Mehr Informationen zum Thema Datenschutz">Mehr Informationen zum Thema
                                Datenschutz{{#if this.targetBlank}}{{~> components/base/image/icon _icon="extern" _addClass="icon--primary icon--textRight" _iconmap="icons"~}}{{/if}}</a>
                        {{/with}}
                    {{/with}}
                </p>
            </div>
            <div class="bg-[#e3e3e3] py-2.5 px-6 dataPolicySettings__section">
                <span class="block pb-2 text-lg text-black font-headingSerif text__headline dataPolicySettings__sectionTitle">{{loca
                    "cookies_setting_section_title"}}</span>
                <div class="dataPolicySettings__providerAll all">
                    <span class="inline-block text-base text-black dataPolicySettings__providerTitle js-providerTitle">x</span>
                    {{> components/dataPolicySettings/toggle_button _provider="all" _addClass="js-toggleSwitch-checkbox-all"}}
                </div>
            </div>

            <ul class="dataPolicySettings__providers">
                {{#with this.serviceList}}
                    {{#each this}}
                        <li class="bg-white py-2.5 px-6 border-t border-[#e3e3e3] dataPolicySettings__provider {{this.key}}">
                            <span class="inline-block text-base leading-6 text-black dataPolicySettings__providerTitle">{{this.value}}</span>
                            {{> components/dataPolicySettings/toggle_button _provider=this.key _addClass="js-toggleSwitch-checkbox js-toggleSwitch-external" _isInitiallyHidden=this.isInitiallyHidden }}
                        </li>
                    {{/each}}
                {{/with}}
            </ul>
        </div>
    </div>
    </div>