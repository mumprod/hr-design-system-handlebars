{{#each this.navigationItems}}
    <li class="sb-service-navigation-item -{{this.id}} flex flex-col h-10 lg:h-15 md:h-full w-full tablet:first:border-l border-r last:border-r-0 lg:border-r-0 text-navigation-icons border-navigation-border-color" >
        {{#if this.subNavigation}} 
            <button 
                id="{{nextRandom}}" 
                @click.debounce.100ms="toggleServiceNav()" 
                @click.outside="dropped = false;"
                @close-servicemenu.window="dropped = false; $store.serviceNavIsOpen = false"

                x-data="dropdown"
                id="{{getRandom}}"
                
                class="js-load flex flex-col items-center justify-center h-full px-4 text-left lg:justify-start lg:px-3 lg:pt-1 lg:hover:underline lg:relative lg:rounded-t lg:border-0 lg:left-0 text-navigation-icons link-focus-inset-white {{#if this.selected}}-currentService{{/if}}"

                :class="dropped ? 'bg-white fill-current text-primary lg:border-0 lg:underline' : ''" 

                aria-owns="flyout-{{getRandom}}" 
                aria-controls="flyout-{{getRandom}}"
                x-effect="$el.setAttribute('aria-expanded', dropped);$el.setAttribute('aria-label', dropped ? '{{this.text}}-Menü schließen' : '{{this.text}}-Menü öffnen')"
                data-hr-click-tracking='{"settings": [{"type": "uxNavigation", "secondLevelId": "1", "clickLabel": "Servicenavigation::{{this.text}}-Link geklickt"}]}'
            >
              
        {{else}}

            {{#if this.extern}}
                <a href="{{this.url}}" target="_blank" x-init="dropped = false" class="flex flex-col items-center justify-center h-full px-4 lg:justify-start lg:px-3 lg:rounded-t link-focus-inset-white js-load" id="flyout-{{nextRandom}}-1" data-hr-click-tracking='{"settings": [{"type": "uxNavigation", "secondLevelId": "1", "clickLabel": "Servicenavigation::{{this.text}}-Link geklickt"}]}'>
            {{else}}
                <a href="{{resourceUrl this.url}}" x-init="dropped = false" class="flex flex-col items-center justify-center h-full px-4 lg:justify-start lg:px-3 lg:pt-1 lg:rounded-t link-focus-inset-white js-load" id="flyout-{{nextRandom}}-1" data-hr-click-tracking='{"settings": [{"type": "uxNavigation", "secondLevelId": "1", "clickLabel": "Servicenavigation::{{this.text}}-Link geklickt"}]}'>
            {{/if}}

        {{/if}}

            <div class="w-7 md:w-8 h-7 md:h-8" >
                {{> components/base/image/icon _icon=this.icon _iconmap="icons" _addClass="w-full h-full fill-current"}}
                <span class="sr-only lg:hidden">{{this.text}}</span>
            </div>

            <div :class="{'text-primary fill-current': dropped,'text-navigation-icons fill-white': !dropped}" class="relative flex-row items-center justify-center hidden pt-px text-navigation-icons lg:flex z-170">
                <div class="flex" >
                    <span class="flex text-xs leading-4 whitespace-nowrap">
                        {{text}} 
                    </span>
                    {{#if this.subNavigation}} 
                        <div class="flex lg:pl-1">
                            <div class="flex items-center justify-center" :class="dropped ? 'transform rotate-180':'' ">
                                {{> components/base/image/icon _icon="arrow-down" _iconmap="icons" _addClass="w-3 h-2 fill-current"}}
                            </div>
                        </div>
                    {{/if}}   
                </div>
            </div>  
        {{#if this.subNavigation}}       
            {{> components/site_header/navigation_flyout/navigation_flyout _isSectionNav=false  _navigationType="ServiceNavigation" _parent=this.text }}
            </button>
        {{else}}       
            </a>
        {{/if}}   
    </li>
{{/each}}